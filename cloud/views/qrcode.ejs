<script type="text/javascript">
  document.title = document.title + " | Event QR-Code";
</script>

<div class="container">
  <!--script type="text/javascript" src="/js/jquery.qrcode.min.js"></script-->
  <!--% jQuery('#qrcodeCanvas').qrcode({text: "http://jetienne.com"}); %-->
  <script type="text/javascript" src="/js/qrcode.js"></script>
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <br>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Check-in QR code</h3>
          </div>
          <div class="panel-body">
            <div id="qrcode"></div>
            <!-- TODO: shall use global config file to store the host address -->
            <% var rootAddr = "https://artisticlovoy.parseapp.com/" %>
            <% var fullAddr = rootAddr + "/event/" + eventId + "/checkin/" + volId %>
            <script type="text/javascript">
              var addr = <%- JSON.stringify(fullAddr) %>
              new QRCode(document.getElementById("qrcode"), addr);
            </script>
          </div>
        </div>
        <div class="text-center" style="margin:auto;display:block">Show this QR code when you check in the event</div>
        <br>
        <div>
          <button class="btn btn-primary" style="margin:auto;display:block" onclick="window.print()">Print</button>
        </div>
        <br>
        <br>
      </div>
    </div>
  </div>
</div>
