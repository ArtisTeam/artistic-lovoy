<div class="container">
  <form method="post" action="/login" class="form-signin">
    <h3 class="form-signin-heading">Log in to LOVOY</h3>
    <div class="form-group">
      <label for="inputUsername" class="control-label">Username</label>
      <input type="text" name="username" class="form-control" id="inputUsername" placeholder="Username" required>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="control-label">Password</label>
      <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password" required>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
    <a class="btn btn--link" style="color:#0471D8" href="/forgot-password">Forgot Password</a>
  </form>
</div>
