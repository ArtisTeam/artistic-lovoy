<script type="text/javascript">
  document.title = document.title + " | Dashboard";
</script>

<div class="container">
  <h2><%= (orgProfile.get('name')) ? orgProfile.get('name') + '\'s ':'My ' %>Dashboard</h2>
  <div class="table-responsive">
    <table class="sortable-theme-bootstrap table table-striped" data-sortable>
      <thead>
        <tr>
          <th>Name</th>
          <th>Date</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Max People</th>
          <th>Registered</th>
          <th>Detail</th>
          <th>Edit</th>
          <th>Manage</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i=0; i<events.length ; ++i) {%>
          <% var event = events[i] %>
          <tr>
            <td><a href="/event/<%= event.id %>"><%= event.get('name')%></a></td>
            <td><%= event.get('date')%></td>
            <td><%= event.get('startTime')%></td>
            <td><%= event.get('endTime')%></td>
            <td><%= event.get('maxParticipant')%></td>
            <td><%= event.get('maxParticipant')%></td>
            <td>
              <form action="/event/<%= event.id %>" method="get">
                <button class="btn btn-success" role="button" type="submit">
                  <span class="glyphicon glyphicon-search"> Preview</span>
                </button>
              </form>
            </td>
            <td>
              <form action="/event/<%= event.id %>/edit" method="get">
                <button class="btn btn-success" role="button" type="submit">
                  <span class="glyphicon glyphicon-pencil"> Edit</span>
                </button>
              </form>
            </td>
            <td>
              <form action="/event/<%= event.id %>/manage" method="get">
                <button class="btn btn-success" role="button" type="submit">
                  <span class="glyphicon glyphicon-user"> Manage</span>
                </button>
              </form>
            </td>
            <td>
              <form action="/event/<%= event.id %>/delete" method="post">
                <button class="btn btn-danger" role="button" type="submit">
                  <span class="glyphicon glyphicon-remove"> Delete</span>
                </button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <p>
    <a href="/event/new" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-plus"></span> Create new event</a>
  </p>
</div>
