<div class="container">
  <h2>Organization Profile Management Page</h2>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">My profile</h3>
        </div>
        <div class="panel-body">
          <form data-toggle="validator" role="form" method="post" action="/profile/edit">
            <!-- name -->
            <div class="form-group">
              <label for="inputName" class="control-label">Organization Name</label>
              <input type="text" name="name" class="form-control" id="inputName" placeholder="Orgnization Name" required>
            </div>
            <!-- description -->
            <div class="form-group">
              <label for="inputDescription" class="control-label">Organization Description</label>
              <input type="text" name="description" class="form-control" id="inputDescription" placeholder="Orgnization Description" required>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
            <script type="text/javascript" src="/js/validator.js"></script>
          </form>
        </div>
      </div>

      <!-- reset password -->
      <% include ./password-edit %>

      <!-- id -->
      <% include ./id-view %>

    </div>
  </div>
</div>
